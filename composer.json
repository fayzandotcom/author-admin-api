{
    "name": "author-admin-api",
    "description": "Web Service to verify purchase code from Envato and protect purchase code verification by tracking the number of requests made for each purchase code.",
    "keywords": ["microframework", "rest", "router", "psr7", "envato"],
    "homepage": "https://github.com/fayzandotcom/author-admin-api",
    "license": "GPLv2",
    "authors": [
        {
            "name": "Muhammad Fayzan Siddiqui",
            "email": "fayzandotcom@hotmail.com",
            "homepage": "https://www.linkedin.com/in/fayzansiddiqui/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^2.3",
        "tuupola/base62": "^0.9.0",
        "mashape/unirest-php": "^3.0",
        "tuupola/cors-middleware": "^0.5.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public index.php",
        "test": "phpunit"
    }

}
